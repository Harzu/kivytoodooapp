#:import utils kivy.utils
#:import Header views.widgets.header
#:import NoteList views.widgets.note_list
#:import MDFloatingActionButton kivymd.button.MDFloatingActionButton 
<ScreenBase>:
  FloatLayout:
    canvas.before:
      Color:
        rgb: utils.get_color_from_hex('#414141')
      Rectangle:
        pos: self.pos
        size: self.size
    Header:
      id: header
      text: 'View notes'
    NoteList:
      id: notelist
    MDFloatingActionButton:
      id: add_note
      icon: 'plus'
      pos_hint: {'x': 0.8, 'y': 0.02}
      md_bg_color: utils.get_color_from_hex('#fcb46d')
      text_color:  utils.get_color_from_hex('#F7F7F7')
      on_press: root.add_note('add')