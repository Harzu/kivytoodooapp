#:import utils kivy.utils
#:import Header views.widgets.header
#:import InputNote views.widgets.input
<AddNote>:
  FloatLayout:
    canvas.before:
      Color:
        rgb: utils.get_color_from_hex('#414141')
      Rectangle:
        pos: self.pos
        size: self.size
    Header:
      id: header
      text: 'Note add'
    InputNote:
      id: inputNote
    Button:
      text: 'Save note'
      on_press: root.save_note('base', inputNote.ids.note_capt.text, inputNote.ids.note_body.text)
      size_hint: 1, 0.1
      pos_hint: {'center_x': 0.5, 'center_y': 0.05}
      background_color: utils.get_color_from_hex('#d08c49')
      background_normal: ''
      background_down: ''