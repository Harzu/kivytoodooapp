#:import utils kivy.utils
#:import Header views.widgets.header
#:import InputNote views.widgets.input
#:import MDFloatingActionButton kivymd.button.MDFloatingActionButton 
<AddNote>:
  FloatLayout:
    canvas.before:
      Color:
        rgb: utils.get_color_from_hex('#414141')
      Rectangle:
        pos: self.pos
        size: self.size
    Header:
      id: header
      text: 'Note add'
    InputNote:
      id: inputNote
    MDFloatingActionButton:
      id: save_note
      icon: 'plus'
      pos_hint: {'x': 0.05, 'y': 0.02}
      md_bg_color: utils.get_color_from_hex('#fcb46d')
      text_color:  utils.get_color_from_hex('#F7F7F7')
      on_press: root.save_note('base', inputNote.ids.note_capt.text, inputNote.ids.note_body.text)
    MDFloatingActionButton:
      id: undo
      icon: 'home'
      pos_hint: {'x': 0.8, 'y': 0.02}
      md_bg_color: utils.get_color_from_hex('#fcb46d')
      text_color:  utils.get_color_from_hex('#F7F7F7')
      on_press: root.undo_screen('base')